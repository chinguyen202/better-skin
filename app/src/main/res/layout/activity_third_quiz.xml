<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdQuiz">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <TextView
        android:id="@+id/tvQuiz3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Do you have sensitive skin?"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/tvQuiz3"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        android:id="@+id/sensitiveRadioGroup"
        >
        <RadioButton
            android:id="@+id/rbYes1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:button="@null"
            android:checked="true"
            android:text="Yes"
            android:onClick="getSkinSensitivity"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/rbNo1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:button="@null"
            android:onClick="getSkinSensitivity"
            android:text="No"
            android:textSize="20sp"/>
    </RadioGroup>


    <TextView
        android:id="@+id/tvQuiz4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Are you pregnant?"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/guideline7" />

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@id/tvQuiz4"
        android:id="@+id/pregnancyRadioGroup">
        <RadioButton
            android:id="@+id/rbYes2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checked="true"
            android:button="@null"
            android:text="Yes"
            android:onClick="getPregnancyStatus"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/rbNo2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:button="@null"
            android:text="No"
            android:onClick="getPregnancyStatus"
            android:textSize="20sp"/>
    </RadioGroup>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/btnNext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Generate routines"
        android:onClick="goToGenerateRoutine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline6" />


</androidx.constraintlayout.widget.ConstraintLayout>